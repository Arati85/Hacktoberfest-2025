#include<bits/stdc++.h>
using namespace std;
int solve(string s,int l,int r){
    int count=0;
    for(int i=l-1;i<r-1;i++){
        if(s[i]==s[i+1]){
            count++;
        }
    }
    return count;
}
int main(){
    string s;
    cin>>s;
    int m;
    cin>>m;
    for(int i=0;i<m;i++){
        int l,r;
        cin>>l>>r;
        cout<<solve(s,l,r)<<endl;
    }
  return 0;
